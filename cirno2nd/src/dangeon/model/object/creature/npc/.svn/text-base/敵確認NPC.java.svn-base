	static Base_Enemy C = null;

	int PAGE = 1;

	int PAGE_MAX = 11;
	int PAGE_Y = 8;

	public 敵確認NPC(Point p) {
		super(p, "因幡てゐ", CHARA_IMAGE.因幡てゐ, false);
	}

	private String[] getList() {
		int p = list.size() - (PAGE - 1) * 10;
		if (p > 10) {
			p = 10;
		}
		PAGE_MAX = p;
		String[] _s = new String[p + 2];
		int i = 0;
		for (int num = 0; num < p; num++) {
			_s[i] = list.get(num + ((PAGE - 1) * 10)).getClass()
					.getSimpleName();
			i++;
		}
		_s[p + 0] = "戻る";
		_s[p + 1] = "進む";
		return _s;
	}

	@Override
	public void message() {
		Message.setImageLargeCharacter(Image_LargeCharacter.因幡てゐ);
		Message.set("敵を選んでね？@");
		push();
		Message.removeILC();
	}

	public void page(int i) {
		if (PAGE + i < 1) {
			PAGE = PAGE_Y;
		} else if (PAGE + i > PAGE_Y) {
			return;
		} else {
			PAGE += i;
		}
	}

	public void push() {
		new Base_SelectBox(getList()) {
			@Override
			public void pushCancel() {
				super.pushCancel();
			}

			@Override
			public void pushEnter(int y) {
				System.out.println(y);
				if (y == PAGE_MAX || y == PAGE_MAX + 1) {
					if (y == PAGE_MAX) {
						page(-1);
					} else {
						page(1);
					}
					end();
					push();
				} else {
					C = list.get(y + ((PAGE - 1) * 10));
					select();
				}

			}
		};

	}

	public void select() {
		new Base_SelectBox("Lv1", "Lv2", "Lv3", "Lv？") {
			@Override
			public void pushCancel() {
				super.pushCancel();
				push();
			}

			@Override
			public void pushEnter(int y) {
				C.chengeLv(C.getDeConvertedLV(y + 1));
				System.out.println(C.getName());
				new MassCreater(テストフィールド.ME, null, true).createFirstMap(0);
				end();
			}
		};

	}
